#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))

require 'socket'
require 'base64'
require 'rubygems'

socket = TCPSocket.new('localhost', 22195)
token = Base64.decode64(ARGV.last)
socket.write("\0\0 #{token}\0#{22.chr}{\"aps\":{\"alert\":\"Hi\"}}")
socket.close
